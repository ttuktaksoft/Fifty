<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.SortSettingActivity">

    <include
        android:id="@+id/ui_SortSetting_TopBar"
        layout="@layout/ui_topbar"/>

    <FrameLayout
        android:id="@+id/fl_SortSetting_FrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ui_SortSetting_TopBar"
        app:layout_constraintBottom_toTopOf="@+id/tv_SortSetting_Save"
        android:background="@color/activity_bg"/>

    <TextView
        android:id="@+id/tv_SortSetting_Save"
        android:layout_width="0dp"
        android:layout_height="@dimen/top_bar_height"
        style="@style/BaseTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/MSG_OK"
        android:gravity="center"
        android:textColor="@color/button_enable_str"
        android:textSize="@dimen/default_font_size_big"
        android:background="@color/button_enable"/>

</android.support.constraint.ConstraintLayout>