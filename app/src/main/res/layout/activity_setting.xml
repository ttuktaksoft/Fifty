<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.SettingActivity"
    android:background="@color/activity_bg">

    <include
        android:id="@+id/ui_Setting_TopBar"
        layout="@layout/ui_topbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ui_Setting_TopBar"
        app:layout_constraintBottom_toTopOf="@+id/tv_Setting_Info_Etc">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/v_Setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/v_Setting_Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/v_Setting"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_Setting_Account_Title"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    style="@style/BaseTextView"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Account"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Account"
                    app:layout_constraintTop_toTopOf="@+id/v_Setting_Account"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:text="@string/MSG_ACCOUNT"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:textSize="@dimen/default_font_size_small"
                    android:textColor="@color/str_color_7"
                    android:background="@color/activity_bg"
                    />

                <TextView
                    android:id="@+id/tv_Setting_Account"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Account_Title"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Account"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Account"
                    android:text="@string/MSG_ACCOUNT_INFO"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <ImageView
                    android:id="@+id/iv_Setting_Account"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_Setting_Account"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Account"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Account"
                    android:layout_marginRight="10dp"
                    android:alpha="0.5"
                    android:scaleX="-1"
                    android:tint="@color/icon_tint_brown"
                    android:src="@drawable/ic_back"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/v_Setting_Shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/v_Setting_Account"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_Setting_Shop_Title"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    style="@style/BaseTextView"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Shop"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Shop"
                    app:layout_constraintTop_toTopOf="@+id/v_Setting_Shop"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:text="@string/MSG_MOVE_SHOP"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:textSize="@dimen/default_font_size_small"
                    android:textColor="@color/str_color_7"
                    android:background="@color/activity_bg"
                    />

                <TextView
                    android:id="@+id/tv_Setting_Shop"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Shop_Title"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Shop"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Shop"
                    android:text="@string/MSG_MOVE_SHOP"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <ImageView
                    android:id="@+id/iv_Setting_Shop"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_Setting_Shop"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Shop"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Shop"
                    android:layout_marginRight="10dp"
                    android:alpha="0.5"
                    android:scaleX="-1"
                    android:tint="@color/icon_tint_brown"
                    android:src="@drawable/ic_back"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/v_Setting_Notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/v_Setting_Shop"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_Setting_Notice_Title"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    style="@style/BaseTextView"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Notice"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Notice"
                    app:layout_constraintTop_toTopOf="@+id/v_Setting_Notice"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:text="@string/MSG_NOTICE"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:textSize="@dimen/default_font_size_small"
                    android:textColor="@color/str_color_7"
                    android:background="@color/activity_bg"
                    />


                <TextView
                    android:id="@+id/tv_Setting_Alarm"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Notice_Title"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Notice"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Notice"
                    android:text="@string/MSG_ALARM"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <CheckBox
                    android:id="@+id/cb_Setting_Alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_Setting_Alarm"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Alarm"
                    app:layout_constraintRight_toRightOf="@+id/tv_Setting_Alarm"
                    android:checked="true"
                    android:theme="@style/MyCheckBox"/>


                <TextView
                    android:id="@+id/tv_Setting_Sound"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Alarm"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Notice"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Notice"
                    android:text="@string/MSG_SOUND"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <CheckBox
                    android:id="@+id/cb_Setting_Sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_Setting_Sound"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Sound"
                    app:layout_constraintRight_toRightOf="@+id/tv_Setting_Sound"
                    android:checked="true"
                    android:theme="@style/MyCheckBox"/>

                <TextView
                    android:id="@+id/tv_Setting_Vibration"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Sound"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Notice"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Notice"
                    android:text="@string/MSG_VIBRATION"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <CheckBox
                    android:id="@+id/cb_Setting_Vibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_Setting_Vibration"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Vibration"
                    app:layout_constraintRight_toRightOf="@+id/tv_Setting_Vibration"
                    android:checked="true"
                    android:theme="@style/MyCheckBox"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/v_Setting_Privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/v_Setting_Notice"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_Setting_Privacy_Title"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    style="@style/BaseTextView"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Privacy"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Privacy"
                    app:layout_constraintTop_toTopOf="@+id/v_Setting_Privacy"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:text="@string/MSG_PRIVACY"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:textSize="@dimen/default_font_size_small"
                    android:textColor="@color/str_color_7"
                    android:background="@color/activity_bg"
                    />

                <TextView
                    android:id="@+id/tv_Setting_Block"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Privacy_Title"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Privacy"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Privacy"
                    android:text="@string/MSG_BLOCK_LIST"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <ImageView
                    android:id="@+id/iv_Setting_Block"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_Setting_Block"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Block"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Privacy"
                    android:layout_marginRight="10dp"
                    android:alpha="0.5"
                    android:scaleX="-1"
                    android:tint="@color/icon_tint_brown"
                    android:src="@drawable/ic_back"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/v_Setting_Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/v_Setting_Privacy"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_Setting_Info_Title"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    style="@style/BaseTextView"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Info"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Info"
                    app:layout_constraintTop_toTopOf="@+id/v_Setting_Info"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:text="@string/MSG_INFO"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:textSize="@dimen/default_font_size_small"
                    android:textColor="@color/str_color_7"
                    android:background="@color/activity_bg"
                    />

                <TextView
                    android:id="@+id/tv_Setting_Version"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Info_Title"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Info"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Info"
                    android:text="@string/MSG_FIFTY_VERSION"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <TextView
                    android:id="@+id/tv_Setting_Version_View"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Info_Title"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Info"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Info"
                    android:text="1.0.0"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <TextView
                    android:id="@+id/tv_Setting_Terms_1"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Version"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Info"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Info"
                    android:text="@string/MSG_TERMS_1"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <ImageView
                    android:id="@+id/iv_Setting_Terms_1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_Setting_Terms_1"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Terms_1"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Info"
                    android:layout_marginRight="10dp"
                    android:alpha="0.5"
                    android:scaleX="-1"
                    android:tint="@color/icon_tint_brown"
                    android:src="@drawable/ic_back"
                    />

                <TextView
                    android:id="@+id/tv_Setting_Terms_2"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Terms_1"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Info"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Info"
                    android:text="@string/MSG_TERMS_2"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <ImageView
                    android:id="@+id/iv_Setting_Terms_2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_Setting_Terms_2"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Terms_2"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Info"
                    android:layout_marginRight="10dp"
                    android:alpha="0.5"
                    android:scaleX="-1"
                    android:tint="@color/icon_tint_brown"
                    android:src="@drawable/ic_back"
                    />

                <TextView
                    android:id="@+id/tv_Setting_Terms_3"
                    style="@style/BaseContentTextView"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Terms_2"
                    app:layout_constraintLeft_toLeftOf="@+id/v_Setting_Info"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Info"
                    android:text="@string/MSG_TERMS_3"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/str_color_1"/>

                <ImageView
                    android:id="@+id/iv_Setting_Terms_3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_Setting_Terms_3"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Terms_3"
                    app:layout_constraintRight_toRightOf="@+id/v_Setting_Info"
                    android:layout_marginRight="10dp"
                    android:alpha="0.5"
                    android:scaleX="-1"
                    android:tint="@color/icon_tint_brown"
                    android:src="@drawable/ic_back"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_Setting_Info_Etc"
        android:layout_width="0dp"
        android:layout_height="75dp"
        style="@style/BaseContentTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="@string/MSG_PROFILE_ETC"
        android:textColor="@color/str_color_1"
        android:gravity="center|left"
        android:textSize="@dimen/default_font_size_small_1"/>

    <!--    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_Setting_List"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/ui_Setting_TopBar"
            app:layout_constraintBottom_toBottomOf="parent">

        </androidx.recyclerview.widget.RecyclerView>-->

</androidx.constraintlayout.widget.ConstraintLayout>