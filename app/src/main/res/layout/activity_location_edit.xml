<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.LocationEditActivity"
    android:background="@color/activity_bg">

    <include
        android:id="@+id/ui_Location_Edit_TopBar"
        layout="@layout/ui_topbar"/>

    <TextView
        android:id="@+id/tv_Location_Edit_Save"
        android:layout_width="80dp"
        android:layout_height="0dp"
        style="@style/BaseTextView"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/ui_Location_Edit_TopBar"
        app:layout_constraintBottom_toBottomOf="@+id/ui_Location_Edit_TopBar"
        app:layout_constraintRight_toRightOf="@+id/ui_Location_Edit_TopBar"
        android:textSize="20dp"
        android:text="@string/tv_Location_Edit_Save"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tv_Location_Edit_Desc"
        style="@style/BaseTextView_AutoSize"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ui_Location_Edit_TopBar"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:gravity="center|left"
        android:text="@string/LOCATION_EDIT"
        android:background="@color/str_title_bg_gray"
        />

    <TextView
        android:id="@+id/tv_Location_Edit_Count"
        style="@style/BaseTextView_AutoSize"
        android:layout_width="40dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Location_Edit_Desc"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="30"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/et_Location_Edit_Location"
        style="@style/BaseEditTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Location_Edit_Desc"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="@string/et_Location_Edit_Location"
        android:inputType="textNoSuggestions"
        android:cursorVisible="true"
        />

</android.support.constraint.ConstraintLayout>