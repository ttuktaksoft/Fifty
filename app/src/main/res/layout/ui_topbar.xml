<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="@color/topbar_bg">


        <ImageView
            android:id="@+id/iv_TopBar_Back"
            android:layout_width="@dimen/top_bar_height"
            android:layout_height="@dimen/top_bar_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            android:tint="@color/black_icon_tint"
            />

        <TextView
            android:id="@+id/tv_TopBar_Title"
            style="@style/TobBarTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_TopBar_Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="80dp"
            android:gravity="center_vertical"
            android:text="프로필 작성"
            android:maxLines="1"
            android:textColor="@color/black_icon_tint"
            android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>