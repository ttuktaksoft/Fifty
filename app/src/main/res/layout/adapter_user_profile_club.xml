<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/info_slot_bg">

    <ImageView
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_UserProfile_Club"
        app:layout_constraintRight_toRightOf="@+id/iv_UserProfile_Club"
        app:layout_constraintTop_toTopOf="@+id/iv_UserProfile_Club"
        app:layout_constraintBottom_toBottomOf="@+id/iv_UserProfile_Club"
        android:tint="@color/icon_tint_brown"
        android:src="@drawable/bg_white_square" />

    <ImageView
        android:id="@+id/iv_UserProfile_Club"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_7"/>

    <TextView
        android:id="@+id/tv_UserProfile_Club"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_UserProfile_Club"
        app:layout_constraintRight_toRightOf="parent"
        android:text="asdfasdf"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:textColor="@color/str_color_1"/>

</android.support.constraint.ConstraintLayout>