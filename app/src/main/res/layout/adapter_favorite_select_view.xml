<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <ImageView
        android:id="@+id/iv_Favorite_Select_View_Bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_Favorite_Select_View_Name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Favorite_Select_View_Name"
        app:layout_constraintRight_toRightOf="@+id/tv_Favorite_Select_View_Name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_Favorite_Select_View_Name"
        android:tint="@color/favorite_view_bg_tint_1"
        android:scaleType="fitXY"
        android:src="@drawable/bg_white_square"/>

    <TextView
        android:id="@+id/tv_Favorite_Select_View_Name"
        style="@style/BaseContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="40dp"
        android:text="asdfasdfgsdfgsdf"
        android:textSize="@dimen/default_font_size_big"
        android:textColor="@color/favorite_view_bg_tint_1_str"/>

    <ImageView
        android:id="@+id/iv_Favorite_Select_View_x"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/tv_Favorite_Select_View_Name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Favorite_Select_View_Name"
        app:layout_constraintRight_toRightOf="@+id/tv_Favorite_Select_View_Name"
        android:tint="@color/icon_tint_white"
        android:src="@drawable/ic_x"/>

</android.support.constraint.ConstraintLayout>