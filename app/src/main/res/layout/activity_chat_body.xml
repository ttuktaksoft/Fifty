<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.ChatBodyActivity">

    <include
        android:id="@+id/ui_ChatBody_TopBar"
        layout="@layout/ui_topbar"/>

    <ImageView
        android:id="@+id/iv_ChatBody_Alert"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintRight_toRightOf="@+id/ui_ChatBody_TopBar"
        app:layout_constraintTop_toTopOf="@+id/ui_ChatBody_TopBar"
        app:layout_constraintBottom_toBottomOf="@+id/ui_ChatBody_TopBar"
        android:layout_marginRight="10dp"
        android:tint="@color/black_icon_tint"
        android:src="@drawable/ic_alert"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Chat_Body_List"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ui_ChatBody_TopBar"
        app:layout_constraintBottom_toTopOf="@+id/v_Chat_Body_Bottom"
        android:background="@color/chat_body_bg"/>

    <View
        android:id="@+id/v_Chat_Body_Bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>

    <ImageView
        android:id="@+id/iv_Chat_Body_Plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintTop_toTopOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintBottom_toBottomOf="@+id/v_Chat_Body_Bottom"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_plus"
        />

    <ImageView
        android:id="@+id/iv_Chat_Body_Send"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintTop_toTopOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintBottom_toBottomOf="@+id/v_Chat_Body_Bottom"/>

    <TextView
        android:id="@+id/tv_Chat_Body_Send"
        style="@style/BaseTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="전송"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="@+id/iv_Chat_Body_Send"
        app:layout_constraintLeft_toLeftOf="@+id/iv_Chat_Body_Send"
        app:layout_constraintTop_toTopOf="@+id/iv_Chat_Body_Send"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Chat_Body_Send"
        android:background="@color/button_enable"/>

    <EditText
        android:id="@+id/et_Chat_Body_Msg"
        style="@style/BaseEditTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:ems="10"
        android:hint="채팅내용을 입력해주세요"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="100"
        android:maxLines="5"
        android:minLines="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_Chat_Body_Plus"
        app:layout_constraintRight_toLeftOf="@+id/iv_Chat_Body_Send"
        app:layout_constraintTop_toTopOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintBottom_toBottomOf="@+id/v_Chat_Body_Bottom"/>

</android.support.constraint.ConstraintLayout>