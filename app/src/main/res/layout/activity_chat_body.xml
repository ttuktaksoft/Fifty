<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.ChatBodyActivity">

    <!--<android.support.v7.widget.Toolbar
        android:id="@+id/v_ChatBody_ToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/baseColor"
        android:elevation="1dp"
        app:title="asdfasdf"/>-->

    <android.support.constraint.ConstraintLayout
        android:id="@+id/v_ChatBody_TopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/topbar_bg">

        <ImageView
            android:id="@+id/iv_ChatBody_Back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="@+id/v_ChatBody_TopBar"
            app:layout_constraintTop_toTopOf="@+id/v_ChatBody_TopBar"
            app:layout_constraintBottom_toBottomOf="@+id/v_ChatBody_TopBar"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back"
            />

        <TextView
            android:id="@+id/tv_ChatBody_Title"
            style="@style/BaseTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="@+id/v_ChatBody_TopBar"
            app:layout_constraintLeft_toRightOf="@+id/iv_ChatBody_Back"
            app:layout_constraintTop_toTopOf="@+id/v_ChatBody_TopBar"
            app:layout_constraintBottom_toBottomOf="@+id/v_ChatBody_TopBar"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="타이틀"
            android:textSize="25dp"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Chat_Body_List"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/v_ChatBody_TopBar"
        app:layout_constraintBottom_toTopOf="@+id/v_Chat_Body_Bottom"
        android:background="@color/activity_bg"/>

    <View
        android:id="@+id/v_Chat_Body_Bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </View>

    <ImageView
        android:id="@+id/iv_Chat_Body_Plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintTop_toTopOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintBottom_toBottomOf="@+id/v_Chat_Body_Bottom"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_plus"
        />

    <ImageView
        android:id="@+id/iv_Chat_Body_Send"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintTop_toTopOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintBottom_toBottomOf="@+id/v_Chat_Body_Bottom"/>

    <TextView
        android:id="@+id/tv_Chat_Body_Send"
        style="@style/BaseTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="전송"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="@+id/iv_Chat_Body_Send"
        app:layout_constraintLeft_toLeftOf="@+id/iv_Chat_Body_Send"
        app:layout_constraintTop_toTopOf="@+id/iv_Chat_Body_Send"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Chat_Body_Send"
        android:background="@color/button_enable"/>

    <EditText
        android:id="@+id/et_Chat_Body_Msg"
        style="@style/BaseEditTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="(100자 이내)"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="100"
        android:maxLines="5"
        android:minLines="1"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/iv_Chat_Body_Plus"
        app:layout_constraintRight_toLeftOf="@+id/iv_Chat_Body_Send"
        app:layout_constraintTop_toTopOf="@+id/v_Chat_Body_Bottom"
        app:layout_constraintBottom_toBottomOf="@+id/v_Chat_Body_Bottom"/>

</android.support.constraint.ConstraintLayout>