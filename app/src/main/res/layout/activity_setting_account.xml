<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.SettingAccountActivity"
    android:background="@color/activity_bg">

    <include
        android:id="@+id/ui_Setting_Account_TopBar"
        layout="@layout/ui_topbar"/>

    <TextView
        android:id="@+id/tv_Setting_Account_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ui_Setting_Account_TopBar"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:text="@string/MSG_ACCOUNT_INFO"
        android:textStyle="bold"
        android:gravity="center|left"
        android:textSize="@dimen/default_font_size_small"
        android:textColor="@color/str_color_4"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/tv_Setting_Account_ID_Title"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Account_Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/MSG_ID"
        android:gravity="left|center_vertical"
        android:textColor="@color/str_color_1"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_Setting_Account_ID"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Account_Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="12331122"
        android:gravity="right|center_vertical"
        android:textColor="@color/str_color_1"/>

    <TextView
        android:id="@+id/tv_Setting_Account_Logout"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Account_ID_Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/MSG_LOGOUT"
        android:gravity="left|center_vertical"
        android:textColor="@color/str_color_1"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/iv_Setting_Account_Logout"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@+id/tv_Setting_Account_Logout"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Account_Logout"
        app:layout_constraintRight_toRightOf="@+id/tv_Setting_Account_Logout"
        android:layout_marginRight="10dp"
        android:alpha="0.5"
        android:scaleX="-1"
        android:tint="@color/icon_tint_brown"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:id="@+id/tv_Setting_Account_Withdrawal"
        android:layout_width="0dp"
        android:layout_height="@dimen/top_bar_height"
        style="@style/BaseTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/MSG_WITHDRAWAL"
        android:gravity="center"
        android:textColor="@color/str_color_7"
        android:textStyle="bold" />



</androidx.constraintlayout.widget.ConstraintLayout>