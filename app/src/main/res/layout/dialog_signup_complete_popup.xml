<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_SignUp_Com_Popup_DescBG"
        android:layout_width="350dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_SignUp_Com_Popup_Desc"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_Com_Popup_Desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/iv_SignUp_Com_Popup_Icon"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_fireworks"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_SignUp_Com_Popup_Desc"
        style="@style/BaseTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_SignUp_Com_Popup_Desc"
        android:paddingTop="20dp"
        android:paddingBottom="90dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_SignUp_Com_Popup_Icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textSize="25dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/v_SignUp_Com_Popup_Buttons"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_Com_Popup_Desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/iv_SignUp_Com_Popup_Buttons_OK"
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/v_SignUp_Com_Popup_Buttons"
            app:layout_constraintRight_toRightOf="@id/v_SignUp_Com_Popup_Buttons"
            app:layout_constraintTop_toTopOf="@+id/v_SignUp_Com_Popup_Buttons"
            app:layout_constraintBottom_toBottomOf="@+id/v_SignUp_Com_Popup_Buttons"
            android:background="@drawable/bg_white"/>

        <TextView
            android:id="@+id/tv_SignUp_Com_Popup_Buttons_OK"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/BaseTextView"
            app:layout_constraintTop_toTopOf="@+id/iv_SignUp_Com_Popup_Buttons_OK"
            app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Com_Popup_Buttons_OK"
            app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Com_Popup_Buttons_OK"
            app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Com_Popup_Buttons_OK"
            android:textSize="20dp"
            android:text="@string/MSG_OK"
            android:gravity="center"/>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>