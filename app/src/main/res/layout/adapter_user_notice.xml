<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/iv_Slot_BG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_white_square"/>

    <ImageView
        android:id="@+id/iv_Notice_Profile_Border"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_Notice_Profile"
        app:layout_constraintRight_toRightOf="@+id/iv_Notice_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_Notice_Profile"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Notice_Profile"
        android:tint="@color/icon_tint_brown"
        android:src="@drawable/bg_empty_circle" />

    <ImageView
        android:id="@+id/iv_Notice_Profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/bg_empty_circle"/>

    <TextView
        android:id="@+id/tv_Notice_Desc"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/iv_Notice_Profile"
        app:layout_constraintBottom_toTopOf="@+id/tv_Notice_Date"
        app:layout_constraintLeft_toRightOf="@+id/iv_Notice_Profile"
        app:layout_constraintRight_toRightOf="parent"
        android:text="WMWMWMWMWMWM 님이 친구 추가를 하였습니다"
        android:gravity="left|center_vertical"
        android:breakStrategy="high_quality"
        android:textStyle="bold"
        android:textColor="@color/str_color_5"/>

    <TextView
        android:id="@+id/tv_Notice_Date"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Notice_Profile"
        app:layout_constraintLeft_toRightOf="@+id/iv_Notice_Profile"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/default_font_size_small"
        android:text="sdfsdfsdfsdf123123123123123"
        android:gravity="left|center_vertical"
        android:textColor="@color/str_color_1"/>

    <ImageView
        android:id="@+id/iv_Notice_Line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="3dp"
        android:background="@color/line_color"
        android:alpha="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>