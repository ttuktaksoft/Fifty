<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_Notice_Profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bg_empty_square"/>

    <TextView
        android:id="@+id/tv_Notice_Desc"
        style="@style/BaseTextView_AutoSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@+id/iv_Notice_Profile"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Notice_Profile"
        app:layout_constraintLeft_toRightOf="@+id/iv_Notice_Profile"
        app:layout_constraintRight_toRightOf="parent"
        android:text="안녕하세요 피프티 하우스 입니다우스 입니다우스 입니다우스 입니다우스 입니다우스 입니다우스 입니다우스 입니다."
        android:maxLines="2"
        android:gravity="left|center_vertical"/>

    <ImageView
        android:id="@+id/iv_Notice_Line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_Notice_Profile"
        android:layout_marginTop="3dp"
        android:background="@color/gray_light"
        android:alpha="0.5"/>

</android.support.constraint.ConstraintLayout>