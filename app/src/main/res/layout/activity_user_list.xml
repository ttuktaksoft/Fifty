<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.UserListActivity"
    android:background="@color/activity_bg">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/v_UserList_TopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/topbar_bg">

        <ImageView
            android:id="@+id/iv_UserList_Back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="@+id/v_UserList_TopBar"
            app:layout_constraintTop_toTopOf="@+id/v_UserList_TopBar"
            app:layout_constraintBottom_toBottomOf="@+id/v_UserList_TopBar"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back"
            />

        <TextView
            android:id="@+id/tv_UserList_Title"
            style="@style/BaseTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="@+id/v_UserList_TopBar"
            app:layout_constraintLeft_toRightOf="@+id/iv_UserList_Back"
            app:layout_constraintTop_toTopOf="@+id/v_UserList_TopBar"
            app:layout_constraintBottom_toBottomOf="@+id/v_UserList_TopBar"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="타이틀"
            android:textSize="25dp"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_UserList_List"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/v_UserList_TopBar"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>