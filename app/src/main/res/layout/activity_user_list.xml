<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.UserListActivity"
    android:background="@color/activity_bg">

    <include
        android:id="@+id/ui_UserList_TopBar"
        layout="@layout/ui_topbar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_UserList_List"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/ui_UserList_TopBar"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_UserList_List_Empty"
        android:layout_width="00dp"
        android:layout_height="0dp"
        style="@style/BaseContentTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ui_UserList_TopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/MSG_USER_LIST_EMPTY_LIKE"
        android:gravity="center"
        android:textColor="@color/str_color_1" />

</android.support.constraint.ConstraintLayout>