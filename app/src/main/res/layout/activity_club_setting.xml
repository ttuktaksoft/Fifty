<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.ClubSettingActivity"
    android:background="@color/activity_bg">

    <include
        android:id="@+id/ui_ClubSetting_TopBar"
        layout="@layout/ui_topbar" />

    <TextView
        android:id="@+id/tv_ClubSetting_Join_Wait"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/ui_ClubSetting_TopBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/MSG_CLUB_JOIN_WAIT"
        android:paddingLeft="10dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/str_color_1"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_ClubSetting_Report"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ClubSetting_Join_Wait"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/MSG_CLUB_REPORT_CONTENT"
        android:paddingLeft="10dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/str_color_1"
        android:background="@color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/tv_ClubSetting_Report"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_ClubSetting_Edit"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ClubSetting_Report"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/MSG_CLUB_EDIT"
        android:paddingLeft="10dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/str_color_1"
        android:background="@color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/tv_ClubSetting_Edit"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/iv_ClubSetting_Invite"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ClubSetting_Edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        android:text="@string/MSG_CLUB_INVITE"
        android:gravity="center"
        android:textColor="@color/blue"
        android:background="@color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/iv_ClubSetting_Invite"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tv_ClubSetting_Withdrawal"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_ClubSetting_Invite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/MSG_CLUB_WITHDRAWAL"
        android:gravity="center"
        android:textColor="@color/red"
        android:background="@color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/tv_ClubSetting_Withdrawal"
        android:background="@color/line_color" />

</androidx.constraintlayout.widget.ConstraintLayout>