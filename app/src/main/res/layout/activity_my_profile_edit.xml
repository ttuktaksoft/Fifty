<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.MyProfileEditActivity"
    android:background="@color/at_my_profile_edit_bg">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/v_MyProfile_Edit_TopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/v_MyProfile_Edit_TopBar">

        <ImageView
            android:id="@+id/iv_MyProfile_Edit_Back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="@+id/v_MyProfile_Edit_TopBar"
            app:layout_constraintTop_toTopOf="@+id/v_MyProfile_Edit_TopBar"
            app:layout_constraintBottom_toBottomOf="@+id/v_MyProfile_Edit_TopBar"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back"
            />

        <TextView
            android:id="@+id/tv_MyProfile_Edit_Title"
            style="@style/BaseTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="@+id/v_MyProfile_Edit_TopBar"
            app:layout_constraintLeft_toRightOf="@+id/iv_MyProfile_Edit_Back"
            app:layout_constraintTop_toTopOf="@+id/v_MyProfile_Edit_TopBar"
            app:layout_constraintBottom_toBottomOf="@+id/v_MyProfile_Edit_TopBar"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="타이틀"
            android:textSize="25dp"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ns_MyProfile_Edit_Scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/v_MyProfile_Edit_TopBar">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/v_MyProfile_Edit_Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_MyProfile_Edit_Profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintLeft_toLeftOf="@+id/v_MyProfile_Edit_Info"
                app:layout_constraintRight_toRightOf="@+id/v_MyProfile_Edit_Info"
                app:layout_constraintTop_toTopOf="@+id/v_MyProfile_Edit_Info"
                android:layout_marginTop="30dp"
                android:src="@drawable/bg_empty_circle"
                />

            <ImageView
                android:id="@+id/iv_MyProfile_Edit_Profile_Camera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintRight_toRightOf="@+id/iv_MyProfile_Edit_Profile"
                app:layout_constraintBottom_toBottomOf="@+id/iv_MyProfile_Edit_Profile"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_camera"
                />

            <TextView
                android:id="@+id/tv_MyProfile_Edit_Profile_Desc"
                style="@style/BaseTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/v_MyProfile_Edit_Info"
                app:layout_constraintRight_toRightOf="@+id/v_MyProfile_Edit_Info"
                app:layout_constraintTop_toBottomOf="@+id/iv_MyProfile_Edit_Profile"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/gray_light"
                android:text="@string/tv_MyProfile_Edit_Profile_Desc"
                android:textSize="15dp"
                />

            <ImageView
                android:id="@+id/iv_MyProfile_Edit_Line"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintRight_toRightOf="@+id/v_MyProfile_Edit_Info"
                app:layout_constraintLeft_toLeftOf="@+id/v_MyProfile_Edit_Info"
                app:layout_constraintTop_toBottomOf="@+id/tv_MyProfile_Edit_Profile_Desc"
                android:layout_marginTop="30dp"
                android:alpha="0.5"
                android:background="@color/gray_light"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_MyProfile_Edit_Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/iv_MyProfile_Edit_Line"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>