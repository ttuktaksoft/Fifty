<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.SignUp.FavoriteDetailActivity"
    android:background="@drawable/login_icon">

    <Button
        android:id="@+id/bt_Detail_Select_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="요가"/>

    <Button
        android:id="@+id/bt_Detail_Select_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/bt_Detail_Select_1"
        app:layout_constraintLeft_toRightOf="@id/bt_Detail_Select_1"
        android:text="야구"/>

    <EditText
        android:id="@+id/et_Detail_Search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/bt_Detail_Select_1"
        app:layout_constraintLeft_toLeftOf="@id/bt_Detail_Select_1"
        android:text="관심사 검색 "
        android:inputType="textNoSuggestions"
        android:cursorVisible="true"
        android:background="@drawable/border"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/tv_Detail_Comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="당신의 관심사는.."
        android:textSize="20dp"/>


    <Button
        android:id="@+id/tv_Detail_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Detail_Comment"
        android:text="여행"
        android:textSize="30dp"/>


    <Button
        android:id="@+id/tv_Detail_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toRightOf="@id/tv_Detail_1"
        app:layout_constraintTop_toTopOf="@id/tv_Detail_1"
        android:text="데이트"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/tv_Detail_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Detail_1"
        android:text="문화/공연"
        android:textSize="30dp"/>


    <Button
        android:id="@+id/tv_Detail_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toRightOf="@id/tv_Detail_3"
        app:layout_constraintTop_toTopOf="@id/tv_Detail_3"
        android:text="음식"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/tv_Detail_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Detail_3"
        android:text="등산"
        android:textSize="30dp"/>


    <Button
        android:id="@+id/tv_Detail_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toRightOf="@id/tv_Detail_5"
        app:layout_constraintTop_toTopOf="@id/tv_Detail_5"
        android:text="요가"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/bt_Detail_Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Detail_6"
        android:text="다른 관심사 추천"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/bt_Detail_BackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_Detail_Select"
        android:text="@string/bt_SignUp_Back"/>

    <Button
        android:id="@+id/bt_Detail_NextButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:text="@string/bt_SignUp_Next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/bt_Detail_BackButton" />

</android.support.constraint.ConstraintLayout>