<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.SignUp.FavoriteDetailActivity"
    android:background="@color/at_sign_favorite_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:src="@drawable/ic_logo"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_SignUp_Favorite_Detail_Select"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layoutDirection="ltr"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_SignUp_Favorite_Detail_Search"
            style="@style/BaseEditTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_SignUp_Favorite_Detail_Select"
            android:text="@string/et_SignUp_Favorite_Detail_Search"
            android:inputType="textNoSuggestions"
            android:cursorVisible="true"
            android:background="@drawable/border"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_SignUp_Favorite_Detail_List"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layoutDirection="ltr"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/et_SignUp_Favorite_Detail_Search" />

        <ImageView
            android:id="@+id/iv_SignUp_Favorite_Detail_Recom"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_SignUp_Favorite_Detail_List"
            android:background="@drawable/bg_white"/>

        <TextView
            android:id="@+id/tv_SignUp_Favorite_Detail_Recom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/BaseTextView"
            app:layout_constraintTop_toTopOf="@+id/iv_SignUp_Favorite_Detail_Recom"
            app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite_Detail_Recom"
            app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Favorite_Detail_Recom"
            app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Favorite_Detail_Recom"
            android:textSize="20dp"
            android:text="@string/tv_SignUp_Favorite_Detail_Recom"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_SignUp_Favorite_Detail_Next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_Favorite_Detail_Recom"
            android:background="@drawable/bg_white"/>

        <TextView
            android:id="@+id/tv_SignUp_Favorite_Detail_Next"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/BaseTextView"
            app:layout_constraintTop_toTopOf="@+id/iv_SignUp_Favorite_Detail_Next"
            app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite_Detail_Next"
            app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Favorite_Detail_Next"
            app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Favorite_Detail_Next"
            android:textSize="20dp"
            android:text="@string/tv_SignUp_Favorite_Detail_Next"
            android:gravity="center"/>

    </android.support.constraint.ConstraintLayout>





