<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.ShopActivity"
    android:background="@color/activity_bg">

    <include
        android:id="@+id/ui_Shop_TopBar"
        layout="@layout/ui_topbar"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/v_Shop_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ui_Shop_TopBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_Shop_Info_Icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="@+id/v_Shop_Info"
            app:layout_constraintRight_toRightOf="@+id/v_Shop_Info"
            android:src="@drawable/ic_shop"/>

        <TextView
            android:id="@+id/tv_Shop_Info_Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BaseContentTextView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/v_Shop_Info"
            app:layout_constraintRight_toRightOf="@+id/v_Shop_Info"
            app:layout_constraintTop_toBottomOf="@+id/iv_Shop_Info_Icon"
            android:textColor="@color/str_color_1"
            android:gravity="center"
            android:text="■FIFTY Important Person\n\nFIP를 구매하고, 나의 소중한 사람을 확인하세요.\n\nFIP를 구매시 회원님의\nFIP가 누군지 확인할 수 있습니다.\n"/>

        <TextView
            android:id="@+id/tv_Shop_Info_Desc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BaseContentTextView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintLeft_toLeftOf="@+id/v_Shop_Info"
            app:layout_constraintRight_toRightOf="@+id/v_Shop_Info"
            app:layout_constraintTop_toBottomOf="@+id/tv_Shop_Info_Desc"
            android:textColor="@color/str_color_1"
            android:gravity="left"
            android:text="▶내 프로필을 방문한 회원은 누구?\n▶나를 좋아요한 회원은 누구?\n▶나를 친구로 추가한 회원은 누구?"/>

        <TextView
            android:id="@+id/tv_Shop_Info_Desc_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BaseContentTextView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/v_Shop_Info"
            app:layout_constraintRight_toRightOf="@+id/v_Shop_Info"
            app:layout_constraintTop_toBottomOf="@+id/tv_Shop_Info_Desc_1"
            android:textColor="@color/str_color_1"
            android:gravity="center"
            android:text="FIP 30일 이용권 4,900원"/>

        <TextView
            android:id="@+id/tv_Shop_Info_Buy"
            android:layout_width="0dp"
            android:layout_height="@dimen/top_bar_height"
            style="@style/BaseTextView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Shop_Info_Desc_2"
            android:text="@string/MSG_BUY"
            android:gravity="center"
            android:textColor="@color/button_enable_str"
            android:textStyle="bold"
            android:background="@color/button_enable"/>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>