<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_Msg_Popup_DescBG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_min="150dp"
        app:layout_constraintTop_toTopOf="@+id/tv_Msg_Popup_Desc"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Msg_Popup_Desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/bg_white"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_Msg_Popup_Desc"
        style="@style/BaseContentTextView_AutoSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/MSG_ME_CONFIRM_DESC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="70dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_min="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/str_color_1"/>

    <TextView
        android:id="@+id/tv_Msg_Popup_Buttons_OK"
        android:layout_width="0dp"
        android:layout_height="50dp"
        style="@style/BaseTextView_AutoSize"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Msg_Popup_DescBG"
        app:layout_constraintLeft_toLeftOf="@+id/iv_Msg_Popup_DescBG"
        app:layout_constraintRight_toLeftOf="@+id/tv_Msg_Popup_Buttons_Cancel"
        android:text="@string/MSG_OK"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/button_enable_str"
        android:background="@color/button_enable"/>

    <TextView
        android:id="@+id/tv_Msg_Popup_Buttons_Cancel"
        android:layout_width="0dp"
        android:layout_height="50dp"
        style="@style/BaseTextView_AutoSize"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Msg_Popup_DescBG"
        app:layout_constraintLeft_toRightOf="@+id/tv_Msg_Popup_Buttons_OK"
        app:layout_constraintRight_toRightOf="@+id/iv_Msg_Popup_DescBG"
        android:text="@string/MSG_CANCEL"
        android:textColor="@color/button_disable_str"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/button_disable"/>
