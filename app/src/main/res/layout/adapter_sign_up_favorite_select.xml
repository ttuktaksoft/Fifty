<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_SignUp_Favorite_Select_Bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_SignUp_Favorite_Select_Name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_Favorite_Select_Name"
        app:layout_constraintRight_toRightOf="@+id/tv_SignUp_Favorite_Select_Name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_SignUp_Favorite_Select_Name"
        android:background="@drawable/bg_yellow"/>

    <TextView
        android:id="@+id/tv_SignUp_Favorite_Select_Name"
        style="@style/BaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="40dp"
        android:textSize="20dp"
        android:text="asdfasdfgsdfgsdf"/>

    <ImageView
        android:id="@+id/iv_SignUp_Favorite_Select_x"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/tv_SignUp_Favorite_Select_Name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_Favorite_Select_Name"
        app:layout_constraintRight_toRightOf="@+id/tv_SignUp_Favorite_Select_Name"
        android:background="@drawable/ic_x"/>

</android.support.constraint.ConstraintLayout>