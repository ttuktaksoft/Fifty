                app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite_1"
                app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Favorite_1"
                app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Favorite_1"
                android:padding="5dp"
                android:text="축구"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_SignUp_Favorite_2"
