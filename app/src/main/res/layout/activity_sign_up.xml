            <TextView
                android:id="@+id/tv_SignUp_Favorite_Title"
                android:layout_width="0dp"
                android:layout_height="35dp"
                style="@style/BaseTextView_not_size"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_Age"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="관심사"
                android:gravity="center|left"
                android:background="@color/gray_light_2"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/iv_SignUp_Favorite"
                android:layout_width="80dp"
                android:layout_height="0dp"
                app:layout_constraintRight_toRightOf="@+id/tv_SignUp_Favorite_Title"
                app:layout_constraintTop_toTopOf="@+id/tv_SignUp_Favorite_Title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_Favorite_Title"
                android:layout_marginRight="10dp"
                android:src="@drawable/bg_white_square"
                android:tint="@color/test"
                android:tintMode="src_atop"
                android:visibility="invisible"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_SignUp_Favorite"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/BaseTextView_not_size"
                app:layout_constraintTop_toTopOf="@+id/iv_SignUp_Favorite"
                app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite"
                app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Favorite"
                app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Favorite"

                android:text=""
                android:gravity="center"

                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/iv_SignUp_Favorite_1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_Favorite_Title"
                android:src="@drawable/bg_white"
                android:tint="@color/main_sub_info_bg"
                android:tintMode="src_atop"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_SignUp_Favorite_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/BaseTextView_not_size"
