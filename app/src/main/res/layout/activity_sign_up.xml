                app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite_1"
                android:src="@drawable/bg_white"
                android:tint="@color/main_sub_info_bg"
                android:tintMode="src_atop"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_SignUp_Favorite_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/BaseTextView_not_size"
