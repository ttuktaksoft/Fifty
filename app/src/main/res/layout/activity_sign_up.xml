<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activty.SignUp.SignUpActivity"
    android:background="@color/activity_bg">

    <include
        android:id="@+id/ui_SignUp_TopBar"
        layout="@layout/ui_topbar"/>

    <ImageView
        android:id="@+id/iv_SignUp_Ok"
        android:layout_width="80dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@+id/ui_SignUp_TopBar"
        app:layout_constraintBottom_toBottomOf="@+id/ui_SignUp_TopBar"
        app:layout_constraintTop_toTopOf="@+id/ui_SignUp_TopBar"
android:layout_marginRight="10dp"
        android:src="@drawable/bg_white_square"
        android:tint="@color/test"
        android:tintMode="src_atop"
        android:visibility="invisible"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_SignUp_Ok"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/BaseTextView_not_size"
        app:layout_constraintTop_toTopOf="@+id/iv_SignUp_Ok"
        app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Ok"
        app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Ok"
        app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Ok"

        android:text="완료"
        android:gravity="center"
android:textStyle="bold"
        android:textColor="@color/white"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ns_SignUp_Scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ui_SignUp_TopBar"
        android:scrollbars="none"
        android:background="@color/activity_bg">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/v_SignUp_Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/v_SignUp_Profile_BG"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/topbar_bg"/>

            <ImageView
                android:id="@+id/v_SignUp_Profile"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="@+id/v_SignUp_Profile_BG"
                android:layout_marginBottom="20dp"
                android:src="@drawable/bg_empty_circle_plus"/>

            <EditText
                android:id="@+id/et_SignUp_NickName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/BaseEditTextView"
                app:layout_constraintTop_toBottomOf="@+id/v_SignUp_Profile_BG"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="닉네임을 입력하세요(2~10자)"/>

            <TextView
                android:id="@+id/tv_SignUp_Gender_Title"
                android:layout_width="100dp"
                android:layout_height="30dp"
                style="@style/BaseTextView_not_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_SignUp_NickName"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:text="성별"/>

            <TextView
                android:id="@+id/tv_SignUp_Gender"
                android:layout_width="0dp"
                android:layout_height="30dp"
                style="@style/BaseTextView_not_size"
                app:layout_constraintLeft_toRightOf="@+id/tv_SignUp_Gender_Title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_SignUp_NickName"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:gravity="center|left"

                android:text="남자"/>

            <ImageView
                android:id="@+id/iv_SignUp_Gender"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintRight_toLeftOf="@+id/tv_SignUp_Gender"
                app:layout_constraintTop_toTopOf="@+id/tv_SignUp_Gender"
                app:layout_constraintBottom_toBottomOf="@+id/tv_SignUp_Gender"
                android:gravity="center"
                android:src="@drawable/ic_man_simple"

                android:text="남자"/>

            <TextView
                android:id="@+id/tv_SignUp_Age_Title"
                android:layout_width="100dp"
                android:layout_height="30dp"
                style="@style/BaseTextView_not_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_SignUp_Gender_Title"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:gravity="center|left"

                android:text="출생년도"/>

            <TextView
                android:id="@+id/tv_SignUp_Age"
                style="@style/BaseTextView_not_size"
                android:layout_width="284dp"
                android:layout_height="30dp"
                android:gravity="center|left"

                android:text="1962년"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="270dp" />



<!--            <ImageView
                android:id="@+id/iv_SignUp_Favorite_Title"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
