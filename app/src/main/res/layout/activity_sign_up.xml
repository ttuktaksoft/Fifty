                app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite_2"
                app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Favorite_2"
                app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Favorite_2"
                android:padding="5dp"
                android:text="야구"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_SignUp_Favorite_4"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_SignUp_Favorite_2"
                app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite_1"
                android:src="@drawable/bg_white"
                android:tint="@color/main_sub_info_bg"
                android:tintMode="src_atop"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_SignUp_Favorite_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/BaseTextView_not_size"
                app:layout_constraintTop_toTopOf="@+id/iv_SignUp_Favorite_4"
                app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite_4"
                app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Favorite_4"
                app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Favorite_4"
                android:padding="5dp"
                android:text="스키장"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_SignUp_Favorite_3"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_SignUp_Favorite_1"
                android:src="@drawable/bg_white"
                android:tint="@color/main_sub_info_bg"
                android:tintMode="src_atop"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_SignUp_Favorite_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/BaseTextView_not_size"
                app:layout_constraintTop_toTopOf="@+id/iv_SignUp_Favorite_3"
                app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite_3"
                app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Favorite_3"
                app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Favorite_3"
                android:padding="5dp"
                android:text="스쿠버다이빙"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/iv_SignUp_Favorite_5"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_SignUp_Favorite_3"
                app:layout_constraintTop_toBottomOf="@+id/iv_SignUp_Favorite_1"
                android:src="@drawable/bg_white"
                android:tint="@color/main_sub_info_bg"
                android:tintMode="src_atop"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_SignUp_Favorite_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                style="@style/BaseTextView_not_size"
                app:layout_constraintTop_toTopOf="@+id/iv_SignUp_Favorite_5"
                app:layout_constraintBottom_toBottomOf="@+id/iv_SignUp_Favorite_5"
                app:layout_constraintRight_toRightOf="@+id/iv_SignUp_Favorite_5"
                app:layout_constraintLeft_toLeftOf="@+id/iv_SignUp_Favorite_5"
                android:padding="5dp"
                android:text="+추가"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>





        </android.support.constraint.ConstraintLayout>


    </android.support.v4.widget.NestedScrollView>



