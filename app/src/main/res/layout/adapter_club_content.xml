<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/iv_Club_Con_Profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_write"/>

    <TextView
        android:id="@+id/tv_Club_Con_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Con_Profile"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="닉네임"/>

    <TextView
        android:id="@+id/tv_Club_Con_Date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Nickname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="지금막"/>

    <Button
        android:id="@+id/bt_Club_Con_Menu"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:text="메뉴"/>

    <View
        android:id="@+id/v_Club_Con_Info"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_Club_Con_Desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/v_Club_Con_Info"
        android:layout_margin="10dp"
        android:text="메뉴"/>

    <ImageView
        android:id="@+id/divider_club_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Desc"
        app:srcCompat="@color/gray_light" />

    <View
        android:id="@+id/v_Club_Con_Reply_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_club_1"/>

    <ImageView
        android:id="@+id/iv_Club_Con_Reply_1_Profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_Club_Con_Reply_1"
        app:layout_constraintTop_toTopOf="@+id/v_Club_Con_Reply_1"
        app:layout_constraintBottom_toBottomOf="@+id/v_Club_Con_Reply_1"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_write"/>

    <TextView
        android:id="@+id/tv_Club_Con_Reply_1_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Reply_1_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Con_Reply_1_Profile"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="닉네임"/>

    <TextView
        android:id="@+id/tv_Club_Con_Reply_1_Date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="@+id/v_Club_Con_Reply_1"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Con_Reply_1_Profile"
        android:layout_marginRight="5dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:text="지금막"/>

    <TextView
        android:id="@+id/tv_Club_Con_Reply_1_Desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Reply_1_Profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Reply_1_Nickname"
        app:layout_constraintRight_toRightOf="@+id/v_Club_Con_Reply_1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="left|top"
        android:maxLines="2"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="test"/>

    <ImageView
        android:id="@+id/divider_club_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_Club_Con_Reply_1"
        app:srcCompat="@color/gray_light" />


    <View
        android:id="@+id/v_Club_Con_Reply_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_club_2"/>

    <ImageView
        android:id="@+id/iv_Club_Con_Reply_2_Profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_Club_Con_Reply_2"
        app:layout_constraintTop_toTopOf="@+id/v_Club_Con_Reply_2"
        app:layout_constraintBottom_toBottomOf="@+id/v_Club_Con_Reply_2"
        android:layout_marginLeft="5dp"
        android:src="@drawable/icon_write"/>

    <TextView
        android:id="@+id/tv_Club_Con_Reply_2_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Reply_2_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Con_Reply_2_Profile"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="닉네임"/>

    <TextView
        android:id="@+id/tv_Club_Con_Reply_2_Date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="@+id/v_Club_Con_Reply_2"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Con_Reply_2_Profile"
        android:layout_marginRight="5dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:text="지금막"/>

    <TextView
        android:id="@+id/tv_Club_Con_Reply_2_Desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Reply_2_Profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Reply_2_Nickname"
        app:layout_constraintRight_toRightOf="@+id/v_Club_Con_Reply_2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="left|top"
        android:maxLines="2"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:text="test"/>


</android.support.constraint.ConstraintLayout>