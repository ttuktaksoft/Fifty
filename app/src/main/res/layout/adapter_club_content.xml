<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/v_Club_Con_View_P"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v_Club_Con_View"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/v_Club_Con_View_P"
        app:layout_constraintRight_toRightOf="@+id/v_Club_Con_View_P"
        app:layout_constraintTop_toTopOf="@+id/v_Club_Con_View_P"
        app:layout_constraintBottom_toBottomOf="@+id/v_Club_Con_View_P"/>

    <ImageView
        android:id="@+id/iv_Club_Con_Profile_Border"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_Club_Con_Profile"
        app:layout_constraintRight_toRightOf="@+id/iv_Club_Con_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Con_Profile"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Club_Con_Profile"
        android:tint="@color/icon_tint_brown"
        android:src="@drawable/bg_empty_circle" />

    <ImageView
        android:id="@+id/iv_Club_Con_Profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bg_empty_circle" />

    <TextView
        android:id="@+id/tv_Club_Con_Nickname"
        style="@style/BaseContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Con_Profile"
        android:textSize="@dimen/default_font_size_big"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="@color/str_color_1"
        android:text="닉네임"/>

    <TextView
        android:id="@+id/tv_Club_Con_Date"
        style="@style/BaseContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Nickname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/str_color_4"
        android:text="지금막"
        android:textSize="@dimen/default_font_size"/>

    <ImageView
        android:id="@+id/iv_Club_Con_Menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Con_Profile"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_menu"
        />

    <TextView
        android:id="@+id/tv_Club_Con_Desc"
        style="@style/BaseContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_Club_Con_Profile"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/str_color_1"
        android:text="내용내용내용내용내용내용내용내용내내용내용내용내내용내용내용내내용내용내용내내용내용내용내내용내용내용내내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"/>

    <TextView
        android:id="@+id/tv_Club_Con_Desc_SeeMore"
        style="@style/BaseContentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Desc"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/str_color_4"
        android:text="@string/MSG_CLUB_BODY_SEE_MORE"/>

    <TextView
        android:id="@+id/tv_Club_Con_Report"
        style="@style/BaseContentTextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Desc_SeeMore"
        android:textColor="@color/str_color_1"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/my_profile_info_bg"
        android:textStyle="bold"
        android:text="@string/MSG_CLUB_BODY_REPORT"/>


    <ImageView
        android:id="@+id/tv_Club_Con_BigImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Report" />

    <ImageView
        android:id="@+id/tv_Club_Con_Img_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Report" />

    <ImageView
        android:id="@+id/tv_Club_Con_Img_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toRightOf="@+id/tv_Club_Con_Img_1"
        app:layout_constraintTop_toTopOf="@+id/tv_Club_Con_Img_1" />

    <ImageView
        android:id="@+id/tv_Club_Con_Img_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toRightOf="@+id/tv_Club_Con_Img_2"
        app:layout_constraintTop_toTopOf="@+id/tv_Club_Con_Img_1"  />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Club_Reply_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Report">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v_Club_Reply_Count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Report"
        android:background="@color/white">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintRight_toRightOf="@+id/v_Club_Reply_Count"
            app:layout_constraintLeft_toLeftOf="@+id/v_Club_Reply_Count"
            app:layout_constraintTop_toTopOf="@+id/v_Club_Reply_Count"
            android:alpha="0.5"
            android:background="@color/line_color"
            />

        <ImageView
            android:id="@+id/iv_Club_Reply_Count"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@+id/v_Club_Reply_Count"
            app:layout_constraintRight_toLeftOf="@+id/tv_Club_Reply_Count"
            app:layout_constraintTop_toTopOf="@+id/v_Club_Reply_Count"
            app:layout_constraintBottom_toBottomOf="@+id/v_Club_Reply_Count"
            android:src="@drawable/ic_reply"
            android:tint="@color/str_color_4"/>

        <TextView
            android:id="@+id/tv_Club_Reply_Count"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            style="@style/BaseContentTextView"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_Club_Reply_Count"
            app:layout_constraintRight_toRightOf="@+id/v_Club_Reply_Count"
            app:layout_constraintTop_toTopOf="@+id/v_Club_Reply_Count"
            app:layout_constraintBottom_toBottomOf="@+id/v_Club_Reply_Count"
            android:text="2"
            android:gravity="center"
            android:textColor="@color/str_color_4"
            android:textStyle="bold"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>