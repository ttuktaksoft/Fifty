<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/iv_Club_Con_Profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_write"/>

    <TextView
        android:id="@+id/tv_Club_Con_Nickname"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Con_Profile"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="닉네임"/>

    <TextView
        android:id="@+id/tv_Club_Con_Date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Con_Profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Nickname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:text="지금막"/>

    <Button
        android:id="@+id/bt_Club_Con_Menu"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:text="메뉴"/>

    <View
        android:id="@+id/v_Club_Con_Info"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_Club_Con_Desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/v_Club_Con_Info"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="5dp"
        android:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"/>

    <ImageView
        android:id="@+id/tv_Club_Con_BigImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Desc" />

    <ImageView
        android:id="@+id/tv_Club_Con_Img_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Desc" />

    <ImageView
        android:id="@+id/tv_Club_Con_Img_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toRightOf="@+id/tv_Club_Con_Img_1"
        app:layout_constraintTop_toTopOf="@+id/tv_Club_Con_Img_1" />

    <ImageView
        android:id="@+id/tv_Club_Con_Img_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toRightOf="@+id/tv_Club_Con_Img_2"
        app:layout_constraintTop_toTopOf="@+id/tv_Club_Con_Img_1"  />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Club_Reply_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Con_Desc">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>