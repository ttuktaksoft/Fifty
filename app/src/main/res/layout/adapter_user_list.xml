<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/line_color" />

    <ImageView
        android:id="@+id/iv_User_List_Profile_Border"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_User_List_Profile"
        app:layout_constraintRight_toRightOf="@+id/iv_User_List_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_User_List_Profile"
        app:layout_constraintBottom_toBottomOf="@+id/iv_User_List_Profile"
        android:tint="@color/icon_tint_brown"
        android:src="@drawable/bg_empty_circle" />

    <ImageView
        android:id="@+id/iv_User_List_Profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:src="@drawable/bg_empty_circle"/>

    <TextView
        android:id="@+id/tv_User_List_Name"
        style="@style/BaseContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:maxWidth="140dp"
        app:layout_constraintTop_toTopOf="@+id/iv_User_List_Profile"
        app:layout_constraintLeft_toRightOf="@+id/iv_User_List_Profile"
        android:text="닉네임입니다만?"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:textColor="@color/str_color_1"/>

    <ImageView
        android:id="@+id/iv_User_List_Etc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_User_List_Name"
        app:layout_constraintTop_toTopOf="@+id/tv_User_List_Name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_User_List_Name"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_medal"/>

    <ImageView
        android:id="@+id/iv_User_List_Gender"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_User_List_Profile"
        app:layout_constraintLeft_toRightOf="@+id/iv_User_List_Profile"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_man_simple"/>

    <TextView
        android:id="@+id/tv_User_List_Age"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_User_List_Gender"
        app:layout_constraintBottom_toBottomOf="@+id/iv_User_List_Profile"
        app:layout_constraintLeft_toRightOf="@+id/iv_User_List_Gender"
        android:text="20세"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="@color/str_color_1"/>

    <TextView
        android:id="@+id/tv_User_List_Dis"
        style="@style/BaseContentTextView"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/iv_User_List_Profile"
        app:layout_constraintBottom_toBottomOf="@+id/iv_User_List_Profile"
        app:layout_constraintRight_toRightOf="parent"
        android:text="123456km"
        android:gravity="center|right"
        android:textSize="14dp"
        android:textColor="@color/str_color_1"/>



</android.support.constraint.ConstraintLayout>