<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/info_slot_bg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/v_MyProfile_Edit_Menu"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_MyProfile_Edit_Menu_Title"
            style="@style/BaseContentTextView"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/v_MyProfile_Edit_Menu"
            app:layout_constraintRight_toLeftOf="@+id/tv_MyProfile_Edit_Menu_Desc"
            app:layout_constraintTop_toTopOf="@+id/v_MyProfile_Edit_Menu"
            app:layout_constraintBottom_toBottomOf="@+id/v_MyProfile_Edit_Menu"
            android:layout_marginLeft="10dp"
            android:gravity="left|center_vertical"
            android:text="닉네임"
            android:textStyle="bold"
            android:textColor="@color/str_color_5"
            />

        <TextView
            android:id="@+id/tv_MyProfile_Edit_Menu_Desc"
            style="@style/BaseContentTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_MyProfile_Edit_Menu_Title"
            app:layout_constraintRight_toLeftOf="@+id/tv_MyProfile_Edit_Menu_Arrow"
            app:layout_constraintTop_toTopOf="@+id/v_MyProfile_Edit_Menu"
            app:layout_constraintBottom_toBottomOf="@+id/v_MyProfile_Edit_Menu"
            android:gravity="left|center_vertical"
            android:maxLines="2"
            android:text="닉네임"
            android:textColor="@color/str_color_1"
            />

        <ImageView
            android:id="@+id/tv_MyProfile_Edit_Menu_Arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintRight_toRightOf="@+id/v_MyProfile_Edit_Menu"
            app:layout_constraintTop_toTopOf="@+id/v_MyProfile_Edit_Menu"
            app:layout_constraintBottom_toBottomOf="@+id/v_MyProfile_Edit_Menu"
            android:layout_marginRight="10dp"
            android:alpha="0.5"
            android:scaleX="-1"
            android:tint="@color/icon_tint_brown"
            android:src="@drawable/ic_back"
            />

        <ImageView
            android:id="@+id/iv_MyProfile_Edit_Line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintRight_toRightOf="@+id/v_MyProfile_Edit_Menu"
            app:layout_constraintLeft_toLeftOf="@+id/v_MyProfile_Edit_Menu"
            app:layout_constraintBottom_toBottomOf="@+id/v_MyProfile_Edit_Menu"
            android:alpha="0.5"
            android:background="@color/line_color"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>