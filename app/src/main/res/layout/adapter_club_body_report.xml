<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_Club_Body_Report_Profile_Border"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_Club_Body_Report_Profile"
        app:layout_constraintRight_toRightOf="@+id/iv_Club_Body_Report_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Body_Report_Profile"
        app:layout_constraintBottom_toBottomOf="@+id/iv_Club_Body_Report_Profile"
        android:tint="@color/icon_tint_brown"
        android:src="@drawable/bg_empty_circle" />

    <ImageView
        android:id="@+id/iv_Club_Body_Report_Profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:padding="1dp"
        android:src="@drawable/bg_empty_circle"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/tv_Club_Body_Report_Nickname"
        style="@style/BaseContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxLength="15"
        android:text="피프티하우스"
        app:layout_constraintLeft_toRightOf="@+id/iv_Club_Body_Report_Profile"
        app:layout_constraintTop_toTopOf="@+id/iv_Club_Body_Report_Profile"
        android:textColor="@color/str_color_1"
        />

    <TextView
        android:id="@+id/tv_Club_Body_Report_Msg"
        style="@style/BaseContentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:gravity="left"
        android:text="안녕하세요안녕하세요안녕하세요"
        android:textColor="@color/str_color_1"
        android:maxLines="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_Club_Body_Report_Nickname"
        app:layout_constraintTop_toBottomOf="@+id/tv_Club_Body_Report_Nickname" />


    <TextView
        android:id="@+id/tv_Club_Body_Report_Date"
        style="@style/BaseContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="17/8/19"
        android:textColor="@color/str_color_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_Club_Body_Report_Nickname"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Club_Body_Report_Nickname"/>

</androidx.constraintlayout.widget.ConstraintLayout>