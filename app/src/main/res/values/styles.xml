<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/topbar_bg</item>
        <item name="colorPrimaryDark">@color/topbar_bg</item>
        <item name="color"></item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:buttonStyle">@style/button</item>-->
        <item name="windowNoTitle">true</item>

    </style>
    <style name="BaseTabTextWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/menu</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:textColor">@color/str_color_1</item>
    </style>

    <style name="BaseTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/menu</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/default_font_size</item>
    </style>

    <style name="BaseTextView_AutoSize" parent="BaseTextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/default_font_size_small_1</item>
        <item name="autoSizeMaxTextSize">@dimen/default_font_size_big</item>
    </style>

    <style name="TobBarTextView" parent="BaseTextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/default_font_size</item>
        <item name="autoSizeMaxTextSize">@dimen/default_font_size_big</item>
    </style>

    <style name="BaseContentTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/default_font_size_big</item>
    </style>

    <style name="BaseContentTextView_AutoSize" parent="BaseContentTextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/default_font_size_small_2</item>
        <item name="autoSizeMaxTextSize">@dimen/default_font_size_big</item>
    </style>

    <style name="TobBarContentTextView" parent="BaseContentTextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/default_font_size</item>
        <item name="autoSizeMaxTextSize">@dimen/default_font_size_big</item>
    </style>

    <style name="BaseEditTextView" parent="@android:style/Widget.EditText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:fontFamily">@font/content</item>
        <item name="android:textColor">@color/str_color_1</item>
        <item name="android:background">@color/white</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/default_font_size_small_1</item>
        <item name="autoSizeMaxTextSize">@dimen/default_font_size</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="BaseEditTextView_Password" parent="@android:style/Widget.EditText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textColor">@color/str_color_1</item>
        <item name="android:background">@color/white</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">@dimen/default_font_size_small_1</item>
        <item name="autoSizeMaxTextSize">@dimen/default_font_size</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/default_font_size_small</item>
        <item name="android:fontFamily">@font/menu</item>
    </style>

</resources>
