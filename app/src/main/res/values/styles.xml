<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/topbar_bg</item>
        <item name="colorPrimaryDark">@color/topbar_bg</item>
        <item name="color"></item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:buttonStyle">@style/button</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/my_font2</item>
        <item name="android:textColor">@color/str_base</item>
    </style>

    <style name="BaseTextView_not_size" parent="BaseTextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10dp</item>
        <item name="autoSizeMaxTextSize">23dp</item>
    </style>

    <style name="TobBarTextView" parent="BaseTextView">
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10dp</item>
        <item name="autoSizeMaxTextSize">23dp</item>
    </style>

    <style name="BaseEditTextView" parent="@android:style/Widget.EditText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fontFamily">@font/my_font2</item>
        <item name="android:textColor">@color/str_base</item>
        <item name="android:background">@drawable/bg_white_square</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">10dp</item>
        <item name="autoSizeMaxTextSize">23dp</item>
    </style>

</resources>
