<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/baseColor</item>
        <item name="colorPrimaryDark">@color/baseColor</item>
        <item name="color"></item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:buttonStyle">@style/button</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BaseEditTextView" parent="@android:style/Widget.EditText">
        <item name="android:fontFamily">@font/my_font</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
